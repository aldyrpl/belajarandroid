<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sell_size_nnty_normal"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/group_5_copy_2" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sell_size_sxty_normal"
        android:gravity="center"
        android:maxLines="1"
        android:text="Powermeter"
        android:textColor="#35577f"
        android:textSize="@dimen/sell_size_ten_sp_normal" />
</LinearLayout>
