<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.inscripts.cometchatpulse.demo.CustomView.CircleImageView
        android:id="@+id/ivAvatar"
        tools:src="@tools:sample/avatars"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:civ_border_color="#c1bed0"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tvDelivery"
        android:layout_toEndOf="@id/ivAvatar"
        android:layout_alignTop="@id/ivAvatar"
        tools:text="Delivered At:10.20pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvRead"
        android:layout_toEndOf="@id/ivAvatar"
        android:layout_alignBottom="@id/ivAvatar"
        tools:text="Read At:10.20pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>